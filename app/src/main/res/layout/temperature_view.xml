<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/backgroundColor">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp">


        <ImageView
                android:id="@+id/temp_img1"
                android:layout_width="300dp"
                android:layout_height="150dp"
                android:layout_below="@+id/title_temp"
                android:layout_column="0"
                android:layout_marginTop="10dp"
                android:src="@drawable/wind_chill" />

        <TextView
            android:id="@+id/title_temp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="5dp"
            android:paddingTop="10dp"
            android:text="Windchill temperatures"
            android:textColor="@color/bigTitle"
            android:textSize="12sp"
            android:textStyle="italic|bold" />

        <TextView
                android:id="@+id/wms_context"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/temp_img1"
                android:text="Windchill temperatures below -15 deg. C (orange) \n
                cause significant freezing of bare skin parts!"

                android:textSize="10sp"/>

            <ImageView
                android:id="@+id/wms_img3"
                android:layout_width="300dp"
                android:layout_height="150dp"
                android:layout_below="@+id/wms_img2"
                android:layout_column="0"
                android:src="@drawable/weather_phenomena_symbols"/>



    </LinearLayout>
</RelativeLayout>